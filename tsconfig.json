{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dest",
        "jsx": "preserve",
        "lib": ["es6"],
        "rootDirs": [
            "./src"
        ],
        "baseUrl": "./src",
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}
